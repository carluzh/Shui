<style>
  @keyframes typingDots {
    20% { content: ''; }
    40% { content: '.'; }
    60% { content: '..'; }
    80%, 100% { content: '...'; }
  }

  .dots::after {
    content: '';
    display: inline-block;
    animation: typingDots 3s infinite;
    text-align: left;
  }
</style>

<script>
  const dots = document.getElementById('dots');
  const dotStates = ['', '.', '..', '...'];
  let currentState = 0;

  function animateDots() {
    if (dots) {
      dots.textContent = dotStates[currentState];
      currentState = (currentState + 1) % dotStates.length;
    }
  }

  setInterval(animateDots, 500); // Change dots every 500ms (0.5 seconds)
</script>
