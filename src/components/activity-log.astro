---
import ActivityProgress from './ActivityProgress.astro';
---

<section class="activity-log bg-background text-foreground rounded-lg relative">
  <div class="header-container">
    <div class="space-y-1">
      <h2 class="text-lg font-semibold">Current Projects</h2>
      <p class="text-sm text-muted-foreground">Some stuff I'm working on. Research, Ideas, Projects..</p>
    </div>
  </div>
  
  <div class="space-y-5 relative z-10">
    <ActivityProgress />
  </div>
</section>

<style>
  .activity-log {
    position: relative;
    overflow: hidden;
  }

  .header-container {
    position: relative;
    padding: 1rem 0;
    background-color: hsl(var(--background));
    z-index: 20;
  }

  @media (min-width: 768px) {
    .header-container {
      position: sticky;
      top: 0;
      background: linear-gradient(
        to bottom,
        hsl(var(--background)) 60%,
        hsla(var(--background), 0.8) 80%,
        hsla(var(--background), 0) 100%
      );
    }
  }
</style>
